<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/header_root_view"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp750_88"
    android:background="@color/clr_1bcbec"
    android:clickable="false" >

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/clr_fafafa"
        android:textSize="@dimen/sp750_34" />

    <RelativeLayout
        android:id="@+id/header_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/dp750_30"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/header_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:longClickable="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/header_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/clr_fafafa"
            android:textSize="@dimen/sp750_24"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/header_title"
        android:paddingRight="@dimen/dp750_30" >

        <ImageView
            android:id="@+id/header_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="分享"
            android:textColor="@color/clr_fafafa"
            android:textSize="@dimen/sp750_24"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp750_1"
        android:layout_alignParentBottom="true"
        android:background="@color/clr_bcbbc4" />
</RelativeLayout>