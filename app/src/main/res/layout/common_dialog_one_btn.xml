<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp750_580"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp750_30"
            android:paddingLeft="@dimen/dp750_30"
            android:paddingRight="@dimen/dp750_30"
            android:paddingTop="@dimen/dp750_35">

            <TextView
                android:id="@+id/common_dialog_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp750_30"
                android:text=""
                android:textColor="@color/clr_0a091b"
                android:textSize="@dimen/dp750_30"
                android:visibility="visible"/>

            <View
                android:id="@+id/common_dialog_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_2"
                android:layout_gravity="center_horizontal"
                android:background="@color/clr_1bcbec" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp750_88"
            android:paddingLeft="@dimen/dp750_30"
            android:paddingRight="@dimen/dp750_30"
            android:layout_marginBottom="@dimen/dp750_20"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/common_dialog_ok_btn"
                android:layout_width="@dimen/dp750_300"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/button_open_car_selector"
                android:text="@string/ok"
                android:textColor="@color/clr_1bcbec"
                android:textSize="@dimen/dp750_34" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>